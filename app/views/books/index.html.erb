
    <h1>All Books</h1>


<% if @books.ids.empty? %>
    <p>nothing here</p>
<% else %>
<%= link_to "Show only books with comments", books_with_comments_path %>
    <% @books.uniq.each do |book| %>
        <li><%= link_to book.title, book_path(book) %> | <%= book.author %> | <%= book.page_count %> pages | <%= book.comment_count %> comments</li>
    <% end %>
<% end %>