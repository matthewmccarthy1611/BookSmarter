<h1><%= @book.title %></h1>
<h2>By <%= @book.author %></h2>
<p><%= @book.page_count %> pages</p>
<p><%= @book.description %></p>

<%= link_to "Edit Book", edit_book_path(@book) %>


<h3>Comments</h3>
<%= link_to "Add New Comment", new_book_comment_path(@book) %>
<% if @book.comments.empty? %>
    <p>There are no comments yet. Add one!</p>
<% end %>

<ul>
<% @book.comments.each do |c| %>
    <li>
    <%= link_to c.user.name, user_books_path(c.user) %> says <%= c.content %>
    </li>
<% end %>
</ul>