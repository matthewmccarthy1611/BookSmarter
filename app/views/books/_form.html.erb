<%= form_for(@book) do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>

    <%= f.label :author %><br>
    <%= f.text_field :author %><br>

    <%= f.label :page_count %> "# of pages"<br>
    <%= f.text_field :page_count %><br>

    <%= f.label :description %><br>
    <%= f.text_area_field :description %><br>

    <%= f.submit %>
<% end %>