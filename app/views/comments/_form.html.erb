<%= form_for([@book, @comment]) do |f| %>
    <% if !@book %>
        <%= f.label :book %>
        <%= f.collection_select :book_id, Book.all, :id, :title %>
    <% else %>
        <%= f.hidden_field :book_id %>
    <% end %>

    <%= f.label :content %><br>
    <%= f.text_area :content %><br>

    <%= f.submit %>
<% end %>